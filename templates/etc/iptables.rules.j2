#!/bin/bash

# This file was generated by Ansible for {{ansible_fqdn}}
# Do NOT modify this file by hand!

{% if iptables_flush_all %}
# Clean all
iptables -F
iptables -X
iptables -t nat -F
iptables -t nat -X
iptables -t mangle -F
iptables -t mangle -X
{% endif %}

# Accept all from localhost
iptables -A INPUT -i lo -j ACCEPT
iptables -A OUTPUT -o lo -j ACCEPT

# Forwarded ports.
{% for forward in iptables_forwarded_tcp_ports %}
iptables -t nat -I PREROUTING -p tcp --dport {{forward.from}} -j REDIRECT --to-port {{forward.to}}
{% endfor %}
{% for forward in iptables_forwarded_udp_ports %}
iptables -t nat -I PREROUTING -p udp --dport {{forward.from}} -j REDIRECT --to-port {{forward.to}}
{% endfor %}

# Extra ports allowed for specific IPs
{% for n in iptables_allow_ports_by_ip %}
iptables -A INPUT -p {{n.protocol}} -m {{n.protocol}} -s {{n.ip}} --dport {{n.port}} -j ACCEPT
iptables -A OUTPUT -p {{n.protocol}} -m {{n.protocol}} -d {{n.ip}} --dport {{n.port}} -j ACCEPT
{% endfor %}

# Allowed tcp ports in.
{% for port in iptables_allowed_tcp_ports_in %}
iptables -A INPUT -p tcp -m tcp --dport {{port}} -j ACCEPT
{% endfor %}
# Allowed tcp ports out.
{% for port in iptables_allowed_tcp_ports_out %}
iptables -A OUTPUT -p tcp -m tcp --dport {{port}} -j ACCEPT
{% endfor %}
# Allowed upd ports in.
{% for port in iptables_allowed_udp_ports_in %}
iptables -A INPUT -p udp -m udp --dport {{port}} -j ACCEPT
{% endfor %}
# Allowed upd ports out.
{% for port in iptables_allowed_udp_ports_out %}
iptables -A OUTPUT -p udp -m udp --dport {{port}} -j ACCEPT
{% endfor %}

# Accept ICMP packets, for example ping.
iptables -A INPUT -p icmp -j ACCEPT
iptables -A OUTPUT -p icmp -j ACCEPT

# Allow NTP traffic for time synchronization.
iptables -A OUTPUT -p udp --dport 123 -j ACCEPT
iptables -A INPUT -p udp --sport 123 -j ACCEPT

# Allow google public DNS
iptables -A OUTPUT -d 8.8.8.8 -j ACCEPT
iptables -A OUTPUT -d 8.8.4.4 -j ACCEPT 

# Raw rules
{% for rule in iptables_raw_rules %}
iptables {{rule}}
{% endfor %}

# Allow established connections:
iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A OUTPUT -m state --state ESTABLISHED,RELATED -j ACCEPT

{% if iptables_logging %}
# Logging
iptables -A INPUT -m limit --limit 15/minute -j LOG --log-level 7 --log-prefix "Dropped by iptables: "
iptables -A OUTPUT -m limit --limit 15/minute -j LOG --log-level 7 --log-prefix "Dropped by iptables: "
{% endif %}

{% if iptables_deny_all %}
# Drop all other
iptables -A INPUT -j DROP
iptables -A OUTPUT -j DROP
{% endif %}
