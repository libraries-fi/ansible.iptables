#!/bin/bash

# This file was generated by Ansible for {{ansible_fqdn}}
# Do NOT modify this file by hand!

{% if iptables_flush_all %}
# Clean all
ip6tables -F
ip6tables -X
ip6tables -t nat -F
ip6tables -t nat -X
ip6tables -t mangle -F
ip6tables -t mangle -X
{% endif %}

# Accept all from localhost
ip6tables -A INPUT -i lo -j ACCEPT
ip6tables -A OUTPUT -o lo -j ACCEPT

# Forwarded ports.
{% for forward in iptables_forwarded_tcp_ports %}
ip6tables -t nat -I PREROUTING -p tcp --dport {{forward.from}} -j REDIRECT --to-port {{forward.to}}
{% endfor %}
{% for forward in iptables_forwarded_udp_ports %}
ip6tables -t nat -I PREROUTING -p udp --dport {{forward.from}} -j REDIRECT --to-port {{forward.to}}
{% endfor %}

#Extra ports allowed for spesific ips
{% for n in iptables_allow_ports_by_ip %}
ip6tables -A INPUT -p {{n.protocol}} -m {{n.protocol}} -s {{n.ip}} --dport {{n.port}} -j ACCEPT
ip6tables -A OUTPUT -p {{n.protocol}} -m {{n.protocol}} -d {{n.ip}} --dport {{n.port}} -j ACCEPT
{% endfor %}

# Allowed tcp ports in.
{% for port in iptables_allowed_tcp_ports_in %}
ip6tables -A INPUT -p tcp -m tcp --dport {{port}} -j ACCEPT
{% endfor %}
# Allowed tcp ports out.
{% for port in iptables_allowed_tcp_ports_out %}
ip6tables -A OUTPUT -p tcp -m tcp --dport {{port}} -j ACCEPT
{% endfor %}
# Allowed upd ports in.
{% for port in iptables_allowed_udp_ports_in %}
ip6tables -A INPUT -p udp -m udp --dport {{port}} -j ACCEPT
{% endfor %}
# Allowed upd ports out.
{% for port in iptables_allowed_udp_ports_out %}
ip6tables -A OUTPUT -p udp -m udp --dport {{port}} -j ACCEPT
{% endfor %}

# Accept icmp ping requests.
ip6tables -A INPUT -p icmpv6 -j ACCEPT
ip6tables -A OUTPUT -p icmpv6 -j ACCEPT

# Allow NTP traffic for time synchronization.
ip6tables -A OUTPUT -p udp --dport 123 -j ACCEPT
ip6tables -A INPUT -p udp --sport 123 -j ACCEPT

# Allow google public DNS
ip6tables -A OUTPUT -d 2001:4860:4860::8888 -j ACCEPT
ip6tables -A OUTPUT -d 2001:4860:4860::8844 -j ACCEPT

# Raw rules
{% for rule in iptables_raw_rules %}
ip6tables {{rule}}
{% endfor %}

# Allow established connections:
ip6tables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
ip6tables -A OUTPUT -m state --state ESTABLISHED,RELATED -j ACCEPT

{% if iptables_logging %}
# Logging
ip6tables -A INPUT -m limit --limit 15/minute -j LOG --log-level 7 --log-prefix "Dropped by iptables: "
ip6tables -A OUTPUT -m limit --limit 15/minute -j LOG --log-level 7 --log-prefix "Dropped by iptables: "
{% endif %}

{% if iptables_deny_all %}
# Drop all other
ip6tables -A INPUT -j DROP
ip6tables -A OUTPUT -j DROP
{% endif %}
